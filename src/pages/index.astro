<script is:inline>
  // 1. Inicializace Vanta.js (Mraky)
  function initVanta() {
    if (window.VANTA) {
      window.VANTA.CLOUDS({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        minHeight: 200.00,
        minWidth: 200.00,
        skyColor: 0x00051a,
        cloudColor: 0x1e0032,
        cloudShadowColor: 0x0,
        sunColor: 0x0,
        sunGlareColor: 0x0,
        sunlightColor: 0x0,
        speed: 0.5
      });
    }
  }

  // 2. Logika Hry (Robot vs. Hr√°ƒç)
  let gameState = ["", "", "", "", "", "", "", "", ""];
  let gameActive = true;
  const statusDisplay = document.getElementById('game-status');
  const cells = document.querySelectorAll('.cell');

  function handleCellClick(e) {
    const index = e.target.getAttribute('data-index');
    if (gameState[index] !== "" || !gameActive) return;

    makeMove(index, "X");

    if (gameActive) {
      statusDisplay.innerText = "Robot p≈ôem√Ω≈°l√≠...";
      setTimeout(robotMove, 500);
    }
  }

  function robotMove() {
    if (!gameActive) return;
    const availableMoves = gameState.map((v, i) => v === "" ? i : null).filter(v => v !== null);
    if (availableMoves.length > 0) {
      const move = availableMoves[Math.floor(Math.random() * availableMoves.length)];
      makeMove(move, "O");
    }
  }

  function makeMove(index, player) {
    gameState[index] = player;
    const cell = document.querySelector(`[data-index="${index}"]`);
    cell.innerText = player;
    cell.classList.add(player.toLowerCase());
    checkResult(player);
  }

  function checkResult(player) {
    const wins = [[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
    let won = wins.some(comb => comb.every(i => gameState[i] === player));

    if (won) {
      statusDisplay.innerText = player === "X" ? "Vyhr√°la jsi! üéâ" : "Robot vyhr√°l! ü§ñ";
      gameActive = false;
    } else if (!gameState.includes("")) {
      statusDisplay.innerText = "Rem√≠za! ü§ù";
      gameActive = false;
    } else if (player === "O") {
      statusDisplay.innerText = "Jsi na ≈ôadƒõ (X)";
    }
  }

  // Reset hry
  document.getElementById('reset-btn').addEventListener('click', () => {
    gameState = ["", "", "", "", "", "", "", "", ""];
    gameActive = true;
    statusDisplay.innerText = "Jsi na ≈ôadƒõ (X)";
    cells.forEach(c => { c.innerText = ""; c.classList.remove('x', 'o'); });
  });

  // Spu≈°tƒõn√≠ v≈°eho po naƒçten√≠
  document.addEventListener('DOMContentLoaded', () => {
    initVanta();
    cells.forEach(cell => cell.addEventListener('click', handleCellClick));
  });
</script>
